.modal.fade{ role: "dialog", id: "add-event" }
  .modal-dialog
    = simple_form_for Artist.new, :url => artists_path, :defaults => {:input_html =>{ :class => "form-control" }}, :html => {:class => 'form-vertical'} do |f|
      .modal-content
        .modal-header
          %a.close{"data-dismiss" => "modal"} Ã—
          %h4 New Artist
        .modal-body
          .row
            .col-sm-7
              = f.input :name, :autofocus => true
              = f.input :mbid
              = f.input :embed_video
              = f.input :space_url
              = f.input :website
              = f.input :twitter
              = f.input :facebook
              = f.input :description
            .col-sm-5
              = image_tag f.object.avatar.url, class: "img-thumbnail img-responsive img-avatar mgn-t-20"
              = f.file_field :avatar, class: "hide file-avatar"
        .modal-footer
          = f.button :submit, "Create", :class => 'btn-primary'
          %a.btn.btn-default{"data-dismiss" => "modal", href: "#"} Close