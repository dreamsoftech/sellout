#content
  .panel.bannerarea
    #banner.carousel.slide.carousel-fade
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#banner"}
        %li{"data-slide-to" => "1", "data-target" => "#banner"}
        %li{"data-slide-to" => "2", "data-target" => "#banner"}
      / Carousel items
      .carousel-inner
        - 4.times do |i|
          .item
            %img{src: "/assets/banner/banner#{i+1}.jpg", style: "width: 100%;"}
    .map-with-agent.visible-desktop
  / News Carousel
  = render "news"
  .container
    .row-fluid
      %h2.main-heading.bottom-line
        %span.main-circle-icon
          %i.icon-building
        Concerts Around you
    .row-fluid
      .span9
        .panel.right-line
          .featured-grid.right-space
            .box-white
              .grid-item.grid-style-properties
                - @events.each_with_index do |event, i|
                  .item
                    %a.with-hover{href: "events/#{event.artists[0].name.gsub(/\s+/, '')}"}
                    
                      %img.full{src: "#{artist_image_url(event)}"}
                      %span.mask_hover
                        %br
                        %h1.link GET TICKET
                        %h4.link #{event.datetime}
                        %ul.inline
                          - event.artists.each do |artist|
                            %li
                              %img.img-small{src: "#{artist.image_url}"}

                    %p
                      #{event.venue.name}, #{event.venue.city}, #{event.venue.region}

            / End Grid Featured
