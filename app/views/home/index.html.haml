      .span3(ng-controller="HomeController")
        .panel
          / Start Form Search Properties
          %h3.main-heading.bottom-line.line-before
            %span.main-circle-icon
              %i.icon-search
            Find Events
          .bottom-line.line-before
            %label Location
            %input.input-block-level{"ng-model" => "location", placeholder: "Input location", type: "text", typeahead: "address for address in getLocation($viewValue) | filter:$viewValue", "typeahead-loading" => "loadingLocations"}
            .control-group-form
              .control-group.half.pull-left
                %label.control-label Start Date
                .controls
                  %input.input-block-level.datepicker{name: "start_date", placeholder: "Start Date", type: "text", value: "#{params[:start_date]}"}
  
              .control-group.half.text-right.pull-right
                %label.control-label End Date
                .controls
                  %input.input-block-level.datepicker{name: "end_date", placeholder: "End Date", type: "text", value: "#{params[:end_date]}"}
                .clearfix
              .control-group-form
                .control-group.half.pull-left
                  %label.checkbox
                    %input{type: "checkbox"}
                      Recommended
                .control-group.half.text-left.pull-right
                  %label.checkbox
                    %input{type: "checkbox"}
                      Sale
            %button.input-block-level.btn-proper.btn.btn-largeSearch{"ng-click" => "getEvents()"} Search

            / Start List Our Agent
