.modal.fade{ role: "dialog", id: "poster-#{poster.id}" }
  .modal-dialog
    = simple_form_for poster, :url => poster_path(poster), :defaults => {required: false, :input_html =>{ :class => "form-control" }}, :html => {:class => 'form-vertical' } do |f|
      .modal-content
        .modal-header
          %a.close{"data-dismiss" => "modal"} Ã—
          %h4 Edit Poster
        .modal-body
          = f.input :artist_name
          = f.input :video_url, as: :text
          = f.input :website
          = f.input :description, as: :text, input_html: { class: "form-control poster-description" }

        .modal-footer
          = f.button :submit, "Update", :class => 'btn-primary'
          %a.btn.btn-default{"data-dismiss" => "modal", href: "#"} Close