.modal.fade{ role: "dialog", id: "add-poster" }
  .modal-dialog
    = simple_form_for Poster.new, :url => posters_path, :defaults => {required: false, :input_html =>{ :class => "form-control" }}, :html => {:class => 'form-vertical' } do |f|
      .modal-content
        .modal-header
          %a.close{"data-dismiss" => "modal"} Ã—
          %h4 New Poster
        .modal-body
          = f.input :artist
          = f.input :video_url, as: :text
          = f.input :website
          = f.input :description, as: :text, input_html: { class: "form-control poster-description" }

        .modal-footer
          = f.button :submit, "Create", :class => 'btn-primary'
          %a.btn.btn-default{"data-dismiss" => "modal", href: "#"} Close